<Window x:Class="Mantesis2015.BitacoraWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:igDP="http://infragistics.com/DataPresenter"
         Title="Bitácora"
        Width="805"
        Height="382"
        Loaded="Window_Loaded"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <igDP:XamDataGrid Name="xamBitacora"
                          Width="783"
                          Height="292"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          GroupByAreaLocation="None">
            <igDP:XamDataGrid.FieldSettings>
                <igDP:FieldSettings AllowEdit="False" CellClickAction="SelectRecord" />

            </igDP:XamDataGrid.FieldSettings>
            <igDP:XamDataGrid.Resources>
                <Style TargetType="{x:Type igDP:DataRecordCellArea}">
                    <Setter Property="BackgroundSelected" Value="#FF757D9D" />
                    <Setter Property="BackgroundActive" Value="#FFC5CED8" />
                    <Setter Property="BackgroundHover" Value="#FF757D9D" />
                </Style>
            </igDP:XamDataGrid.Resources>
        </igDP:XamDataGrid>

        <Button Name="btRegresar"
                Width="75"
                Height="23"
                Margin="555,308,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="BtnRegresar_Click"
                Content="Regresar" />
    </Grid>
</Window>
