<UserControl x:Class="InformesSalas.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:igDP="http://infragistics.com/DataPresenter"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             Loaded="UserControl_Loaded"
             d:DesignHeight="500"
             d:DesignWidth="900"
             mc:Ignorable="d">
    <UserControl.Resources>
        <HierarchicalDataTemplate x:Key="TreeDataTemp" ItemsSource="{Binding Hijos}">
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="{Binding Descripcion}" />
            </StackPanel>
        </HierarchicalDataTemplate>

    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="White">
            <GroupBox Height="100"
                      Margin="10,25,10,0"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Top"
                      Header="Disco">
                <ComboBox x:Name="CbxProyectos"
                          Height="25"
                          Margin="10,25,10,0"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Top"
                          DisplayMemberPath="Descripcion"
                          ItemsSource="{Binding}"
                          SelectedValuePath="IdProyecto"
                          SelectionChanged="CbxProyectos_SelectionChanged" />

            </GroupBox>

            <telerik:RadTreeView x:Name="ClasificacionTreeView"
                                 Height="250"
                                 Margin="10,150,10,0"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Top"
                                 ItemTemplate="{StaticResource TreeDataTemp}"
                                 ItemsSource="{Binding}">
                <telerik:RadTreeView.ItemContainerStyle>
                    <Style TargetType="telerik:RadTreeViewItem">
                        <Setter Property="telerik:RadTreeViewItem.IsExpanded" Value="True" />
                    </Style>
                </telerik:RadTreeView.ItemContainerStyle>
            </telerik:RadTreeView>

        </Grid>

        <Grid Grid.Column="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>



            <telerik:RadGridView x:Name="dgTesis"
                                 Grid.Row="1"
                                 AutoGenerateColumns="False"
                                 ItemsSource="{Binding}"
                                 MouseDoubleClick="DgTesis_MouseDoubleClick"
                                 SelectionChanged="dgTesis_SelectionChanged"
                                 ShowGroupPanel="False">
                <telerik:RadGridView.Columns>
                    <telerik:GridViewDataColumn Width="60"
                                                DataMemberBinding="{Binding Ius}"
                                                Header="IUS"
                                                IsReadOnly="True" />
                    <telerik:GridViewDataColumn Width="*"
                                                DataMemberBinding="{Binding Rubro}"
                                                Header="Rubro"
                                                IsReadOnly="True" />
                    <telerik:GridViewDataColumn Width="120"
                                                DataMemberBinding="{Binding Tesis}"
                                                Header="Tesis"
                                                IsReadOnly="True" />
                    <telerik:GridViewDataColumn Width="80"
                                                DataMemberBinding="{Binding Pagina}"
                                                Header="Página"
                                                IsReadOnly="True" />
                </telerik:RadGridView.Columns>
            </telerik:RadGridView>

