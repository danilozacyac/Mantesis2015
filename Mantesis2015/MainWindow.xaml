<Window x:Class="Mantesis2015.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Custom="http://schemas.microsoft.com/winfx/2006/xaml/presentation/ribbon"
        xmlns:igDP="http://infragistics.com/DataPresenter"
        xmlns:igEditors="http://infragistics.com/Editors"
        xmlns:igOutlookBar="http://infragistics.com/OutlookBar"
        xmlns:igRibbon="http://infragistics.com/Ribbon"
        xmlns:local="clr-namespace:Mantesis2015.Classes"
        xmlns:search="clr-namespace:UIControls;assembly=UIControls"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Title="MainWindow"
        Width="1200"
        Height="900"
        Loaded="Window_Loaded"
        WindowState="Maximized">
    <Window.Resources>
        <local:ConverterBrush x:Key="ValueToBrushConverter" />
        <Style x:Key="MyConvert" TargetType="{x:Type igEditors:XamNumericEditor}">
            <Setter Property="Background" Value="{Binding Value, Converter={StaticResource ValueToBrushConverter}, RelativeSource={RelativeSource Self}}" />
        </Style>
        <Style x:Key="changeForeground" TargetType="{x:Type igDP:CellValuePresenter}">
            <Setter Property="Foreground" Value="blue" />
        </Style>


        <local:ConverterRows x:Key="genderToColorConverter" />

        <Style x:Key="MyConvertRow" TargetType="{x:Type igDP:DataRecordPresenter}">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Opacity="0.3" Color="{Binding Cells[Tatj].Value, Converter={StaticResource genderToColorConverter}}" />
                </Setter.Value>
            </Setter>
        </Style>


    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="*" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>

        <igRibbon:XamRibbon Theme="Office2k7Black">
            <igRibbon:XamRibbon.ApplicationMenu>
                <igRibbon:ApplicationMenu Caption="File">

                    <igRibbon:ButtonTool x:Name="RBtnPermisos"
                                         Caption="Permisos Secciones"
                                         Click="ButtonTool_Click"
                                         IsEnabled="False"
                                         SmallImage="Resources/key.png" />

                    <igRibbon:ButtonTool x:Name="RBtnVolumenes"
                                         Caption="Permisos Volumenes"
                                         Click="ButtonTool_Click"
                                         IsEnabled="False"
                                         SmallImage="Resources/lockVol.png" />

                    <igRibbon:SeparatorTool />

                    <igRibbon:ButtonTool x:Name="RBtnSalir"
                                         Caption="Salir"
                                         Click="ButtonTool_Click"
                                         SmallImage="Resources/exit_128.png" />

                </igRibbon:ApplicationMenu>
            </igRibbon:XamRibbon.ApplicationMenu>
            <igRibbon:RibbonTabItem Header="Mantenimiento">
                <igRibbon:RibbonGroup Caption="General" Uid="5">
                    <igRibbon:ButtonTool x:Name="BtnNuevaTesis"
                                         Caption="Tesis Nueva"
                                         Click="ButtonTool_Click"
                                         Id="NewTesis"
                                         IsEnabled="False"
                                         LargeImage="Resources/addTesis_128.png"
                                         SmallImage="Resources/addTesis_64.png"
                                         igRibbon:RibbonGroup.MaximumSize="ImageAndTextLarge" />
                    <igRibbon:ButtonTool x:Name="BtnVisualizaTesis"
                                         Caption="_Visualizar Tesis"
                                         Click="ButtonTool_Click"
                                         Id="ViewTesis"
                                         IsEnabled="False"
                                         LargeImage="Resources/viewTesis_128.png"
                                         SmallImage="Resources/viewTesis_64.png"
                                         igRibbon:RibbonGroup.MaximumSize="ImageAndTextLarge" />
                    <igRibbon:ButtonTool x:Name="BtnActualizaTesis"
                                         Caption="Actualizar Tesis"
                                         Click="ButtonTool_Click"
                                         Id="EditTesis"
                                         IsEnabled="False"
                                         LargeImage="Resources/editTesis_128.png"
                                         SmallImage="Resources/editTesis_64.png"
                                         igRibbon:RibbonGroup.MaximumSize="ImageAndTextLarge" />
                    <igRibbon:ButtonTool x:Name="BtnEliminaTesis"
                                         Caption="Eliminar Tesis"
                                         Click="ButtonTool_Click"
                                         Id="DelTesis"
                                         IsEnabled="False"
                                         LargeImage="Resources/delTesis_128.png"
                                         SmallImage="Resources/delTesis_64.png"
                                         igRibbon:RibbonGroup.MaximumSize="ImageAndTextLarge" />
                </igRibbon:RibbonGroup>
                <igRibbon:RibbonGroup x:Name="GrExport"
                                      Caption="Exportar"
                                      IsEnabled="False">
                    <igRibbon:ButtonTool x:Name="RBtnPdf"
                                         Caption="PDF"
                                         Click="ExportarGroupClick"
                                         Id="PDF"
                                         LargeImage="Resources/pdf_256.png"
                                         SmallImage="Resources/pdf_128.png"
                                         igRibbon:RibbonGroup.MaximumSize="ImageAndTextLarge" />
                    <igRibbon:ButtonTool x:Name="RBtnWord"
                                         Caption="Word"
                                         Click="ExportarGroupClick"
                                         Id="Word"
                                         LargeImage="Resources/word_256.png"
                                         SmallImage="Resources/word_128.png"
                                         igRibbon:RibbonGroup.MaximumSize="ImageAndTextLarge" />
                    <igRibbon:ButtonTool x:Name="RBtnSga"
                                         Caption="Materias SGA"
                                         Click="ExportarGroupClick"
                                         Id="MatSga"
                                         LargeImage="Resources/info_256.png"
                                         SmallImage="Resources/info_128.png"
                                         igRibbon:RibbonGroup.MaximumSize="ImageAndTextLarge" />

                </igRibbon:RibbonGroup>


            </igRibbon:RibbonTabItem>
            <igRibbon:RibbonTabItem Header="Informe de las Salas" IsEnabled="False" >
                <igRibbon:RibbonGroup Caption="Clasificación">
                    <igRibbon:ButtonTool x:Name="BtnMostrarProy"
                                         Caption="Mostrar Proyectos"
                                         Id="MostrarProyecto"
                                         IsEnabled="False"
                                         LargeImage="Resources/delTesis_128.png"
                                         SmallImage="Resources/delTesis_64.png"
                                         igRibbon:RibbonGroup.MaximumSize="ImageAndTextLarge" />
                </igRibbon:RibbonGroup>
            </igRibbon:RibbonTabItem>
            <igRibbon:RibbonTabItem Header="Herramientas administrativas" />
        </igRibbon:XamRibbon>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <GroupBox x:Name="VerIus"
                          Height="150"
                          Margin="35,30,20,0"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Top"
                          Header="Ver IUS"
                          IsEnabled="False"
                          Uid="3">
                    <Grid>
                        <Label Width="150"
                               Height="20"
                               Margin="10,16,10,22"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Content="Núm. de registro:" />
                        <TextBox x:Name="TxtVerIus"
                                 Height="25"
                                 Margin="10,23,10,22"
                                 KeyDown="TxtVerIus_KeyDown"
                                 PreviewTextInput="TxtIus_PreviewTextInput" />
                        <Button x:Name="BtnVerIus"
                                Width="80"
                                Height="20"
                                Margin="128,82,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Click="BtnVerIus_Click"
                                Content="Buscar" />
                    </Grid>
                </GroupBox>
                <GroupBox x:Name="EpocaVolumen"
                          Height="200"
                          Margin="35,220,20,0"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Top"
                          Header="Selección"
                          IsEnabled="False"
                          Uid="2">
                    <Grid>
                        <ComboBox x:Name="CbEpoca"
                                  Width="220"
                                  Margin="10,47,0,0"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Top"
                                  DisplayMemberPath="Descripcion"
                                  FontSize="13"
                                  ItemsSource="{Binding}"
                                  SelectedValuePath="IdDato"
                                  SelectionChanged="CbEpoca_SelectionChanged" />
                        <Label Margin="10,101,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Content="Tomo / Volumen / Libro / Número " />
                        <ComboBox x:Name="CbxVolumen"
                                  Width="220"
                                  Margin="10,127,0,0"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Top"
                                  FontSize="13"
                                  SelectionChanged="CbxVolumen_SelectionChanged" />

