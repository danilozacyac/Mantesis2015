            <TextBlock x:Name="textBlock3"
                       Width="55"
                       Height="23"
                       Margin="7,18,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       FontSize="14"
                       Text="Buscar:" />
            <TextBox x:Name="TxtBuscar"
                     Width="143"
                     Height="23"
                     Margin="68,17,0,0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     KeyDown="TxtBuscar_KeyDown" />
            <Button x:Name="BtnIr"
                    Width="43"
                    Height="23"
                    Margin="217,17,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="BtnIr_Click"
                    Content="Ir" />
            <TextBlock x:Name="textBlock1"
                       Height="23"
                       Margin="0,17,139,0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       FontSize="14"
                       Text="Ordenar por:" />
            <ComboBox x:Name="cbOrden"
                      Width="124"
                      Height="23"
                      Margin="0,17,10,0"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Top"
                      FontSize="14"
                      SelectionChanged="CbOrden_SelectionChanged">
                <ComboBoxItem x:Name="publi"
                              Content="Publicación"
                              Tag="0" />
                <ComboBoxItem x:Name="ius"
                              Content="IUS"
                              Tag="1" />
                <ComboBoxItem x:Name="tesis"
                              Content="Tesis"
                              Tag="2" />
            </ComboBox>


        </Grid>
    </Grid>
</UserControl>
